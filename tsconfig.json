{
  "compilerOptions": {
    "target": "ES2020",              // Modern JS features
    "module": "ESNext",              // Use native ES modules
    "moduleResolution": "node",
    "outDir": "dist",                // Compiled JS output
    "rootDir": "src",                // Source TS files
    "esModuleInterop": true,         // Enable `import fs from "fs"` style
    "forceConsistentCasingInFileNames": true,
    "strict": true,                  // Enable strict type-checking
    "skipLibCheck": true,            // Skip type checks on node_modules
    "resolveJsonModule": true,       // Allow import of JSON config
    "sourceMap": true                // Optional: useful for debugging
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
